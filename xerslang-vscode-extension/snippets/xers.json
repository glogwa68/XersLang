  "Fibonacci Template": {
    "prefix": "fib",
    "body": [
      "fn fibonacci(n: i64) -> i64 {",
      "\tif n <= 1 {",
      "\t\treturn n;",
      "\t}",
      "\tlet a = 0;",
      "\tlet b = 1;",
      "\tlet i = 2;",
      "\twhile i <= n {",
      "\t\tlet temp = a + b;",
      "\t\ta = b;",
      "\t\tb = temp;",
      "\t\ti = i + 1;",
      "\t}",
