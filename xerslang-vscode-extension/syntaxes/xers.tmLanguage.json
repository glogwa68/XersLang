{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "XersLang",
  "scopeName": "source.xers",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#builtins"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#types"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#function-definition"
    },
    {
      "include": "#function-call"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.xers",
          "match": "//.*$"
        },
        {
          "name": "comment.block.xers",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            {
              "name": "comment.block.xers",
              "match": "."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.xers",
          "match": "\\b(if|else|while|return|break|continue)\\b"
        },
        {
          "name": "keyword.declaration.xers",
          "match": "\\b(fn|let|mut|const)\\b"
        },
        {
          "name": "keyword.other.xers",
          "match": "\\b(struct|enum|impl|trait|mod|use|pub|as|type)\\b"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.memory.xers",
          "match": "\\b(alloc|free|peek|poke)\\b"
        },
        {
          "name": "support.function.builtin.string.xers",
          "match": "\\b(strlen|streq)\\b"
        },
        {
          "name": "support.function.builtin.io.xers",
          "match": "\\b(print|print_int|printc|prints|println|read_file|file_len|write_file)\\b"
        },
        {
          "name": "support.function.builtin.process.xers",
          "match": "\\b(exit)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.true.xers",
          "match": "\\btrue\\b"
        },
        {
          "name": "constant.language.boolean.false.xers",
          "match": "\\bfalse\\b"
        },
        {
          "name": "constant.language.null.xers",
          "match": "\\bnull\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.numeric.xers",
          "match": "\\b(i64|i32|i16|i8|u64|u32|u16|u8|f64|f32)\\b"
        },
        {
          "name": "storage.type.primitive.xers",
          "match": "\\b(bool|char|str|void|ptr)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.xers",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.xers",
              "match": "\\\\(n|r|t|\\\\|\"|'|0|x[0-9a-fA-F]{2}|u\\{[0-9a-fA-F]+\\})"
            }
          ]
        },
        {
          "name": "string.quoted.single.xers",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.xers",
              "match": "\\\\(n|r|t|\\\\|\"|'|0|x[0-9a-fA-F]{2})"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.xers",
          "match": "\\b0x[0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.binary.xers",
          "match": "\\b0b[01_]+\\b"
        },
        {
          "name": "constant.numeric.octal.xers",
          "match": "\\b0o[0-7_]+\\b"
        },
        {
          "name": "constant.numeric.float.xers",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9_]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.xers",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "function-definition": {
      "patterns": [
        {
          "match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": {
              "name": "keyword.declaration.function.xers"
            },
            "2": {
              "name": "entity.name.function.xers"
            }
          }
        }
      ]
    },
    "function-call": {
      "patterns": [
        {
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": {
              "name": "entity.name.function.call.xers"
            }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.xers",
          "match": "->"
        },
        {
          "name": "keyword.operator.comparison.xers",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.xers",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arithmetic.xers",
          "match": "\\+|\\-|\\*|\\/|%"
        },
        {
          "name": "keyword.operator.bitwise.xers",
          "match": "&|\\||\\^|<<|>>|~"
        },
        {
          "name": "keyword.operator.assignment.compound.xers",
          "match": "\\+=|\\-=|\\*=|\\/=|%=|&=|\\|=|\\^=|<<=|>>="
        },
        {
          "name": "keyword.operator.assignment.xers",
          "match": "="
        },
        {
          "name": "keyword.operator.namespace.xers",
          "match": "::"
        },
        {
          "name": "keyword.operator.type.xers",
          "match": ":"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.terminator.xers",
          "match": ";"
        },
        {
          "name": "punctuation.separator.xers",
          "match": ","
        },
        {
          "name": "punctuation.accessor.xers",
          "match": "\\."
        },
        {
          "name": "punctuation.brackets.round.xers",
          "match": "[()]"
        },
        {
          "name": "punctuation.brackets.curly.xers",
          "match": "[{}]"
        },
        {
          "name": "punctuation.brackets.square.xers",
          "match": "[\\[\\]]"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.xers",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
