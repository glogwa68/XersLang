{
  "name": "xerslang",
  "displayName": "XersLang",
  "description": "XersLang language support with Material Icon Theme integration",
  "version": "0.3.3",
  "publisher": "xerslang",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Themes"
  ],
  "keywords": [
    "xers",
    "xerslang",
    "systems programming",
    "low-level"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/glogwa68/XersLang"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "themes": [
      {
        "label": "XersLang Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/xerslang-dark-color-theme.json"
      }
    ],
    "iconThemes": [
      {
        "id": "xerslang-material-icons",
        "label": "XersLang Material Icons",
        "path": "./xerslang-material-icons.json"
      }
    ],
    "languages": [
      {
        "id": "xerslang",
        "aliases": [
          "XersLang",
          "xers",
          "xerslang"
        ],
        "extensions": [
          ".xers"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/xers-file.svg",
          "dark": "./icons/xers-file.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "xerslang",
        "scopeName": "source.xers",
        "path": "./syntaxes/xers.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "xerslang",
        "path": "./snippets/xers.json"
      }
    ],
    "commands": [
      {
        "command": "xerslang.compile",
        "title": "XersLang: Compile Current File",
        "category": "XersLang"
      },
      {
        "command": "xerslang.run",
        "title": "XersLang: Compile and Run",
        "category": "XersLang"
      }
    ],
    "keybindings": [
      {
        "command": "xerslang.compile",
        "key": "ctrl+shift+b",
        "when": "editorLangId == xerslang"
      },
      {
        "command": "xerslang.run",
        "key": "f5",
        "when": "editorLangId == xerslang"
      }
    ],
    "configuration": {
      "title": "XersLang",
      "properties": {
        "xerslang.compilerPath": {
          "type": "string",
          "default": "xersc",
          "description": "Path to the XersLang compiler executable (xersc)."
        },
        "xerslang.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^18.19.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.19.0",
    "typescript": "^5.3.0"
  }
}
